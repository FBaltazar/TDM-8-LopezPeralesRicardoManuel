<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/fondo1">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/txtnumero"
        android:layout_width="91dp"
        android:layout_height="98dp"
        android:layout_marginLeft="155dp"
        android:text="TextView"
        android:textColor="#03A9F4"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
    <Button
        android:id="@+id/btn1"
        android:layout_width="163dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:text=" "
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        android:layout_marginLeft="110dp"
        android:textColor="#ff0000"
        app:layout_constraintTop_toBottomOf="@+id/txtnumero" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo intento"
        android:layout_marginLeft="120dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="351dp"
        android:layout_height="70dp"
        android:text="Presiona el boton cuando los dos numero sean iguales...
Determina tus habilidades para salvar el mundo buena suerte..."
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        android:textColor="#ffffffff"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reinicio"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:id="@+id/reincio"/>

</LinearLayout>